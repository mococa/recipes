<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yoummy</title>
    <link rel="stylesheet" href="../css/styles.css">
</head>
<style>
    .forum {
        padding: 15px 30px;
        justify-content: center;

    }

    .receita {
        display: flex;
        cursor: pointer;
        padding: 20px 10px;
        color: black;
        background-color: #ededed;
        border-radius: 10px;
        justify-content: space-between;
        text-transform: uppercase;
        flex: 1;
        white-space: nowrap;
    }
    .clickable:hover{
        cursor:pointer;
        filter:brightness(95%);
    }
    .props span {
        display: flex;
        place-items: center;
        gap: 5px;
    }

    .add-recipe {
        display: flex;
        text-transform: uppercase;
        background: #6FDD88;
        justify-content: center;
        padding: 15px 30px;
        border-radius: 5px;
        color: white;
        white-space: nowrap;
    }

    .recentes-bloco {
        background: #ededed;
        flex: 1;
        border-radius: 5px;
        padding:15px;
    }
</style>

<body class="flex-vr">
    <%- include ('./partials/header')%>
        <div class="forum flex-hr" style="gap:20px;flex-wrap: wrap-reverse;">
            <div class="left flex-vr" style="gap:20px;flex:2;">
                <span>Receitas Populares</span>
                <div class="populares flex-vr" style="gap:20px">
                    <%for(const receita of receitas){%>
                        <a href="/p<%=receita.href%>" class="receita flex-hr clickable" style="gap:15px">
                            <%=receita.nome%>
                                <div class="props flex-hr" style="gap:5px">
                                    <span class="views">
                                        <img src="../src/svgs/views.svg" alt="">
                                        <span>
                                            <%=receita.views%>
                                        </span>
                                    </span>
                                    <span class="upvotes">
                                        <img src="../src/svgs/upvote.svg" alt="">
                                        <span>
                                            <%=receita.votes.up%>
                                        </span>
                                    </span>
                                    <span class="downvotes">
                                        <img src="../src/svgs/downvote.svg" alt="">
                                        <span>
                                            <%=receita.votes.down%>
                                        </span>
                                    </span>
                                </div>
                        </a>
                        <%}%>
                </div>
            </div>
            <div class="right flex-vr" style="gap:20px;flex:1;">
                <span>Recentes</span>
                <div class="recentes-bloco flex-vr">
                    <%for(const recente of recentes){%>
                        <a href="<%=recente.href%>">
                            <%=recente.nome%>
                        </a>
                        <%}%>
                </div>
                <a href="new" class="add-recipe clickable">Adicionar Receita</a>
            </div>
        </div>

</body>

</html>